{
  "expo": {
    "name": "hashpass.tech",
    "slug": "hashpass-tech",
    "version": "1.4.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hashpass",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hashpass.tech",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes for tickets and wallet addresses."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.hashpass.tech",
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png",
      "themeColor": "#1D9BF0",
      "backgroundColor": "#000000",
      "startUrl": "/?utm_source=web_app_manifest",
      "shortName": "HashPass",
      "lang": "en",
      "scope": "/",
      "display": "standalone",
      "orientation": "portrait-primary",
      "preferRelatedApplications": false,
      "dangerouslyAllowInsecureHttpRequests": false,
      "serviceWorker": {
        "source": "/sw.js",
        "scope": "/"
      },
      "manifest": {
        "name": "HashPass",
        "short_name": "HashPass",
        "description": "Secure password management and sharing",
        "start_url": "/",
        "display": "standalone",
        "background_color": "#ffffff",
        "theme_color": "#000000",
        "orientation": "portrait",
        "icons": [
          {
            "src": "/assets/android-chrome-192x192.png",
            "sizes": "192x192",
            "type": "image/png"
          },
          {
            "src": "/assets/android-chrome-512x512.png",
            "sizes": "512x512",
            "type": "image/png"
          }
        ]
      },
      "meta": {
        "og:type": "website",
        "og:title": "HashPass",
        "og:description": "YOUR EVENT - YOUR COMMUNITY - YOUR BENEFITS",
        "og:image": "./assets/images/icon.png",
        "apple-mobile-web-app-capable": "yes",
        "apple-mobile-web-app-status-bar-style": "default",
        "apple-mobile-web-app-title": "HashPass",
        "mobile-web-app-capable": "yes",
        "msapplication-TileColor": "#1D9BF0",
        "msapplication-tap-highlight": "no",
        "viewport": "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover"
      },
      "build": {
        "babel": {
          "include": [
            "@babel/plugin-proposal-export-namespace-from",
            "react-native-reanimated/plugin"
          ]
        }
      }
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    },
    "versionCode": 202510150933,
    "buildNumber": 2
  }
}
